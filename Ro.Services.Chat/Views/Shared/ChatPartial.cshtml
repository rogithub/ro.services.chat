<script type="text/html" id="TextMessage">
    <div data-bind="css:  { 
                            'text-right': isLocal                                
                        }">
        <p class="alert" data-bind="css:  { 
                            'msgSaliente': isLocal,
                            'msgEntrante': !isLocal,
                        }">
            <strong data-bind="text: user, visible: !isLocal"></strong>
            <span data-bind="text: message.content"></span>

            <small class="text-muted" data-bind="text: message.time"></small>
        </p>
    </div>
</script>


<script type="text/html" id="PrivateTextMessage">
    <div data-bind="css:  { 
                            'text-right': isLocal                                
                        }">
        <p class="alert" data-bind="css:  { 
                            'msgSaliente': isLocal,
                            'msgEntrante': !isLocal,
                        }, event: { scroll: $parent.onMessageScroll.bind($parent) }">
            <span data-bind="text: message.content"></span>

            <small class="text-muted" data-bind="text: message.time"></small>

            * is local <small data-bind="text: isLocal"></small>
            * state <small data-bind="text: message.state()"></small>


{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log.txt"
                }
            }
        ],
        "Properties": {
            "Application": "Ro.Services.Chat",
            "Environment": "Development"
        }
    },
    "Urls": "https://localhost:5002",
    "Kestrel": {
        "Certificates": {
            "Default": {
                "Path": "/home/ro/Databases/localhost-certs/ro.services.chat/https-chat.pfx",
                "Password": "https-chat"
            }
        }
    }
}